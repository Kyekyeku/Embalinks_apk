        <script>
            function calculatePrice() {
                const items = {
                    'EVD': 0.95,
                    'MTN Regular-SIM': 8.5,
                    'MTN TRANSFER SIM': 28.5,
                    'Nokia g21': 1650,
                    'Samsung Galaxy A24': 2600,
                    'Tecno Spark 10 Pro': 1960
                };
                const selectedItems = document.getElementById('items').value;
                const quantity = parseInt(document.getElementById('quantity').value);
                const price = items[selectedItems] * quantity;

                document.getElementById('price').value = price.toFixed(2);
            }

            function showPreview() {
                const date = document.getElementById('date').value;
                const branch = document.getElementById('branch').value;
                const items = document.getElementById('items').value;
                const quantity = document.getElementById('quantity').value;
                const price = document.getElementById('price').value;

                const previewContent = "<h2>Preview:</h2>" +
                    "<p><strong>Date:</strong> " + date + "</p>" +
                    "<p><strong>Branch:</strong> " + branch + "</p>" +
                    "<p><strong>Items:</strong> " + items + "</p>" +
                    "<p><strong>Quantity:</strong> " + quantity + "</p>" +
                    "<p><strong>Total:</strong> " + price + "</p>";

                document.getElementById('preview').innerHTML = previewContent;
                document.getElementById('preview').style.display = 'block';
            }

            document.getElementById('orderForm').addEventListener('submit', function (e) {
                e.preventDefault();
                document.getElementById('feedback').style.display = 'block';
            });
        </script>
